- name: "copy files to Host"
  hosts: openstack_servers
  tasks:
  - name: Copying files to Host
    become: True
    become_user: root                                                                                                       
    copy:
      src: /image-tester-ansible/Playbooks/send_file/scripts/ubuntu_debian/
      dest: "/home/{{ ansible_user }}/scripts/"
      owner: root
      mode: 0755
    with_fileglob:
      - /image-tester-ansible/Playbooks/send_file/scripts/ubuntu_debian/*
    when: ansible_distribution == 'Debian' or ansible_distribution == 'Ubuntu'


- name: "copy files to Host"
  hosts: openstack_servers
  tasks:
  - name: Copying files to Host
    become: True
    become_user: root                                                                                                       
    copy:
      src: /image-tester-ansible/Playbooks/send_file/scripts/fedora_centos/
      dest: "/home/{{ ansible_user }}/scripts/"
      owner: root
      mode: 0755
    with_fileglob:
      - /image-tester-ansible/Playbooks/send_file/scripts/fedora_centos/*
    when: ansible_distribution == 'Fedora' or ansible_distribution == 'CentOS'